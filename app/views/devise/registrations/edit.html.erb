<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}, method: :put) do |f| %>
    <h2 class="form-signin-heading">Edit profile</h2>

    <%= devise_error_messages! %>


    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", placeholder: "Your name goes here", autofocus: true %>


    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>


    <%= f.label "About" %>
    <%= f.text_area :description, class: "form-control", placeholder: "Brief" %>

    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control", placeholder: "Email address" %>

    <%= f.label :avatar %>
    <%= f.file_field :avatar, class: "form-control", text: "Choose an avatar" %>

    <div class="checkbox">
      <label>
        <input type="checkbox" id="password-checker"> Change password
      </label>
    </div>

    <div id="password-fields">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
      <%= f.password_field :password, class: "form-control signup-field", placeholder: "Password", autocomplete: "off" %>
      <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: "form-control signup-field", placeholder: "Password confirmation", autocomplete: "off" %>
    </div>

    <%= f.label :current_password %>
    <%= f.password_field :current_password, class: "form-control signup-field", id: "current-password", placeholder: "Current Password", autocomplete: "off" %>
    <i>(we need your current password to confirm your changes)</i><br/>


    <div class="actions">
      <%= f.submit "Update", id: "btn-submit", class: "btn btn-lg btn-success btn-block" %>
    </div>

<% end %>
<div class="form-cancel">
  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: {confirm: "Are you sure?"}, method: :delete, class: "btn btn-small btn-danger" %></p>
</div>

<%= link_to "Back", :back, class: "btn btn-small btn-primary" %>
