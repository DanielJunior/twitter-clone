<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
    <h2 class="form-signin-heading center">Join us</h2>

    <%= devise_error_messages! %>

    <%= f.label :name, class: "sr-only" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Your name goes here", autofocus: true %>

    <%= f.label "About", class: "sr-only" %>
    <%= f.text_area :description, class: "form-control", placeholder: "Brief" %>

    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, class: "form-control", placeholder: "Email address" %>

    <%= f.label :avatar, class: "sr-only" %>
    <%= f.file_field :avatar, class: "form-control", text: "Choose an avatar" %>

    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, class: "form-control signup-field", placeholder: "Password", autocomplete: "off" %>
    <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>

    <%= f.label :password_confirmation, class: "sr-only" %>
    <%= f.password_field :password_confirmation, class: "form-control signup-field", placeholder: "Password confirmation", autocomplete: "off" %>


    <div class="actions">
      <%= f.submit "Sign up", id: "btn-signup", class: "btn btn-lg btn-success btn-block" %>
    </div>

    <br/>

    <%= render "devise/shared/links" %>

<% end %>