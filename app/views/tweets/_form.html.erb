<div id="tweet-form_container">
  <%= form_for(tweet, url: tweets_path(tweet), html: {class: "form-inline"}, method: :post) do |f| %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <div class="form-group">
        <%= f.label :content, class: "sr-only" %>
        <%= f.text_area :content, rows: 2, cols: 30, class: "form-control", id: "tweet",placeholder: "Write something..." %>
      </div>

      <%= button_tag(type: "submit", class: "btn btn-small btn-success") do %>
          Tweet <span class="glyphicon glyphicon-send" aria-hidden="true"></span>
      <% end %>
  <% end %>

  <p id="characters-count"></p>
</div>