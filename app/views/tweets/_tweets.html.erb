<% if !tweets.blank? %>
    <% tweets.each do |tweet| %>
        <div class="panel panel-info">
          <div class="panel-heading tweet-head">
            <%= image_tag(tweet.user.avatar.url(:thumb)) %>
            <h3 class="panel-title"><%= tweet.user.name %></h3>
          </div>
          <div class="panel-body">
            <%= tweet.content %>
          </div>
        </div>

    <% end %>
<% else %>
    <div class="alert alert-warning" role="alert">You don't have any tweets yet!</div>
<% end %>