<%= render partial: 'profile_sidebar', locals: {user: @facade.current_user} %>

<div class="feed-container body-padding">

  <%= render partial: 'tweets/form', locals: {tweet: @facade.new_tweet} %>

  <%= render partial: 'application/errors', locals: {errors: flash.now[:errors]} %>

  <ul class="nav nav-tabs">
    <li role="presentation" class="active" >
      <a href="#">
        <span class="glyphicon glyphicon-th-list" aria-hidden="true"></span> Feed
      </a>
    </li>
  </ul>
  <div class="body_content">
    <%= render partial: 'tweets/tweets', locals: {tweets: @facade.my_feed} %>
  </div>
</div>